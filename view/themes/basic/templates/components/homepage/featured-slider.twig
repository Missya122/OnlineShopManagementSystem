<div class="row featured-products">

    <div class="col-12">
        <h5>Featured products</h5>
    </div>

    <div class="col-12 js-products-slider">
        {% for product in products|slice(0,6) %}
            <div class="featured-products__product">
                <a href="/product/{{product.id_product}}">
                    <p>{{product.name}}</p>
                    <img src="/img/product/{{product.image}}" />
                    <p>{{product.price}} {{currency}}</p>
                </a>
            </div>
        {% endfor %}
    </div>

</div>
