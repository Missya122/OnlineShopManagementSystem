{% extends 'page.twig' %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h1>Cart</h1>
        <h4>This is the content of your cart: </h4>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        {% for product in cart.products %}
            <div class="cart__product cart-product">
                <div>
                    <h5 class="cart-product__header">
                        <a href="/product/{{product.id_product}}">
                            <span class="cart-product__name">{{product.name}} &nbsp; </span>
                        </a>
                        <span class="cart-product__quantity"> x {{product.quantity}}</span>
                    </h5>

                    <p class="cart-product__price">
                        Total: <span class="value">{{product.price * product.quantity}} {{currency}}</span>
                    </p>

                    <p class="cart-product__actions">
                        <span class="action-less">-</span>
                        <span class="action-more">+</span>
                        <span class="action-remove">Remove</span>
                    </p>

                </div>

                <a href="/product/{{product.id_product}}">
                    <img class="cart-product__image" src="{{product_image_dir}}/{{product.image}}" />
                </a>
                
            </div>
        {% endfor %}
    </div>
</div>

<br />


<div class="row">
    <div class="col-12">
        <div class="cart__totals">

            <p class="price">
                <span class="price__label">
                    Total price: 
                </span>
                <span class="price__value">
                    {{cart.total_price}} {{currency}}
                </span>
            </p>
            
        </div>

        <a class="btn btn-primary" href="/checkout" class="cart__cta">Proceed to checkout</a>
    </div>
</div>

{% endblock %}
