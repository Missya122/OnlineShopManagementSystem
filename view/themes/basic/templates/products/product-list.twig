{% extends 'page.twig' %}

{% block content %}    
    <section id="wrapper">
        <div class="product-list">
            {% for product in products %}
                <div class="product">
                    <a class="product__link" href="/product/{{product.id_product}}">
                        <span class="product__name">{{product.name}}</span>
                    </a>
                    <span class="product__price">{{product.price}} {{currency}}</span>
                    <span class="product__description--short">{{product.short_description}}</span>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}